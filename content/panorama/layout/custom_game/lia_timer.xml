<root>
    <styles>
 		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="file://{resources}/styles/custom_game/lia_timer.css" />
    </styles>

    <scripts>
    	<include src="file://{resources}/scripts/custom_game/lia_timer.js" />
    </scripts>

	<Panel hittest="false" class="LiATimer">
		<Panel id="TimerContainer" >
			<Label id="timerText" text="ДО СЛЕДУЮЩЕЙ ВОЛНЫ   " />
			<Label id="timer" text="00:30" />
			<ProgressBar id="TimerProgress" value="0.5"/>
			<Label id="waveName" text="КОБОЛЬДЫ" />
			<Panel id="VoteContainer">
				<Label id="ForceVote" class="Vote" text="#timer_vote" onactivate="ForceRound()"/>
				<Label id="ForceVote2" text="#timer_vote2"/>
			</Panel>
		</Panel>
	</Panel>
</root>
